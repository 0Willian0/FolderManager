<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="ARQUIVO NAO ENCONTRADO"
        android:visibility="invisible"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/textPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="Este aplicativo para a funcionalidade necessita da permissão para acessar as pasta"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="visible"></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="110dp"
        android:text="Confimar Permissão"
        android:background="@drawable/button"
        android:id="@+id/btnConfirm"
        android:visibility="visible"
        android:textColor="@color/white"
        >

    </Button>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFolder"
        android:layout_width="wrap_content"
        android:layout_height="731dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>